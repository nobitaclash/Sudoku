<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Style button -->
    <style name="ButtonMainStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22dp</item>
        <!--
             <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        -->
    </style>

    <style name="NumberButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- themes -->
    <style name="Theme" parent="android:Theme"></style>

    <style name="Theme.Default">
        <item name="lineColor">#666666</item>
        <item name="sectorLineColor">@android:color/black</item>
        <item name="textColor">@android:color/black</item>
        <item name="textColorReadOnly">@android:color/black</item>
        <item name="textColorNote">@android:color/black</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="backgroundColorReadOnly">#cccccc</item>
        <item name="backgroundColorTouched">#3232ff</item>
        <item name="backgroundColorSelected">#ffff00</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarTheme.SudokuActionBar</item>
    </style>

    <style name="ActionBarTheme.SudokuActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTheme.SudokuActionBa.Title</item>
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="ActionBarTheme.SudokuActionBa.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>